FROM node:18-alpine

# Install basic tools and Python (needed for some native modules)
RUN apk add --no-cache git python3 make g++

# Set working directory
WORKDIR /app

# Copy package.json
COPY package.json ./

# Install dependencies with npm install (no lock file needed)
RUN npm install --verbose

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Development command with hot reloading
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
