{
  "fontFamily": {
    "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
    "mono": "JetBrains Mono, 'Fira Code', Consolas, 'Liberation Mono', Menlo, Courier, monospace",
    "display": "Lexend, Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
  },
  "fontSize": {
    "xs": "0.75rem",    // 12px
    "sm": "0.875rem",   // 14px
    "base": "1rem",     // 16px
    "lg": "1.125rem",   // 18px
    "xl": "1.25rem",    // 20px
    "2xl": "1.5rem",    // 24px
    "3xl": "1.875rem",  // 30px
    "4xl": "2.25rem",   // 36px
    "5xl": "3rem",      // 48px
    "6xl": "3.75rem",   // 60px
    "7xl": "4.5rem",    // 72px
    "8xl": "6rem",      // 96px
    "9xl": "8rem"       // 128px
  },
  "fontWeight": {
    "thin": "100",
    "extralight": "200",
    "light": "300",
    "normal": "400",
    "medium": "500",
    "semibold": "600",
    "bold": "700",
    "extrabold": "800",
    "black": "900"
  },
  "lineHeight": {
    "none": "1",
    "tight": "1.25",
    "snug": "1.375",
    "normal": "1.5",
    "relaxed": "1.625",
    "loose": "2"
  },
  "letterSpacing": {
    "tighter": "-0.05em",
    "tight": "-0.025em",
    "normal": "0em",
    "wide": "0.025em",
    "wider": "0.05em",
    "widest": "0.1em"
  },
  "textStyles": {
    "display": {
      "1": {
        "fontFamily": "display",
        "fontSize": "5xl",
        "fontWeight": "bold",
        "lineHeight": "none",
        "letterSpacing": "tight"
      },
      "2": {
        "fontFamily": "display",
        "fontSize": "4xl",
        "fontWeight": "bold",
        "lineHeight": "tight",
        "letterSpacing": "tight"
      },
      "3": {
        "fontFamily": "display",
        "fontSize": "3xl",
        "fontWeight": "semibold",
        "lineHeight": "tight",
        "letterSpacing": "normal"
      }
    },
    "heading": {
      "1": {
        "fontFamily": "primary",
        "fontSize": "2xl",
        "fontWeight": "bold",
        "lineHeight": "tight",
        "letterSpacing": "normal"
      },
      "2": {
        "fontFamily": "primary",
        "fontSize": "xl",
        "fontWeight": "semibold",
        "lineHeight": "snug",
        "letterSpacing": "normal"
      },
      "3": {
        "fontFamily": "primary",
        "fontSize": "lg",
        "fontWeight": "semibold",
        "lineHeight": "normal",
        "letterSpacing": "normal"
      },
      "4": {
        "fontFamily": "primary",
        "fontSize": "base",
        "fontWeight": "semibold",
        "lineHeight": "normal",
        "letterSpacing": "normal"
      }
    },
    "body": {
      "large": {
        "fontFamily": "primary",
        "fontSize": "lg",
        "fontWeight": "normal",
        "lineHeight": "relaxed",
        "letterSpacing": "normal"
      },
      "medium": {
        "fontFamily": "primary",
        "fontSize": "base",
        "fontWeight": "normal",
        "lineHeight": "normal",
        "letterSpacing": "normal"
      },
      "small": {
        "fontFamily": "primary",
        "fontSize": "sm",
        "fontWeight": "normal",
        "lineHeight": "normal",
        "letterSpacing": "normal"
      }
    },
    "label": {
      "large": {
        "fontFamily": "primary",
        "fontSize": "base",
        "fontWeight": "medium",
        "lineHeight": "normal",
        "letterSpacing": "normal"
      },
      "medium": {
        "fontFamily": "primary",
        "fontSize": "sm",
        "fontWeight": "medium",
        "lineHeight": "normal",
        "letterSpacing": "normal"
      },
      "small": {
        "fontFamily": "primary",
        "fontSize": "xs",
        "fontWeight": "medium",
        "lineHeight": "normal",
        "letterSpacing": "wide"
      }
    },
    "caption": {
      "fontFamily": "primary",
      "fontSize": "xs",
      "fontWeight": "normal",
      "lineHeight": "normal",
      "letterSpacing": "wide"
    },
    "code": {
      "fontFamily": "mono",
      "fontSize": "sm",
      "fontWeight": "normal",
      "lineHeight": "normal",
      "letterSpacing": "normal"
    }
  }
}
